<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/Single_Intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSingleIntentClick"
            android:text="@string/sIntent"
            app:layout_constraintBottom_toTopOf="@+id/Multi_Intent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Multi_Intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onMultipleIntentClick"
            android:text="@string/mIntent"
            app:layout_constraintBottom_toTopOf="@+id/IPC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Single_Intent" />

        <Button
            android:id="@+id/IPC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onIpcClick"
            android:text="@string/ipc"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="275dp" />

        <Button
            android:id="@+id/Broadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onBroadcastClick"
            android:text="@string/bcast"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="366dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>